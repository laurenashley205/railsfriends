<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>
  <br>
  <br>

    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> |
    <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
    <br/><br/>
    <%= button_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %> 
</div>
